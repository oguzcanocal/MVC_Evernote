@using MyEvernote.Entities.Messages
@model MVC_Evernote.ViewModel.ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="form-header">
                <h1 class="text-center">@Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessageObj msg in Model.Items)
                        {
                            @msg.Message<br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>

    $(function () {
        @Html.Raw(js);
    });

</script>
