@using MyEvernote.Entities
@model Note

<div class="row">
    <div class="col-md-12">
        <h3>
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <span class="glyphicon glyphicon-user"></span> @Model.Owner.Username
        <span class="glyphicon glyphicon-user"></span> @Model.ModifiedOn
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>
