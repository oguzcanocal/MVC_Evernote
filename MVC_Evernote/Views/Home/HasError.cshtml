
@{
    ViewBag.Title = "HasError";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @{
            Exception ex = null;
            if (TempData["LastError"] != null)
            {
                ex = TempData["LastError"] as Exception;
            }

        }
        <h1><span class="glyphicon glyphicon-remove-circle"></span> Hata Oluştu</h1>
        <p>
            Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
            <br /><br /><br />
            @if (ex != null)
            {
                <strong>Hata Detay: </strong>
                @ex.Message
                <br /><br /><br />
            }
            @MyBootstrap.LinkButton("/Home/Index", "default", "", "", "home", "Ana Sayfaya Git")
            @MyBootstrap.LinkButton("mailto:oguzcanocal.34@gmail.com","primary","","","envelope","E-posta gönder")
        </p>

    </div>

</div>

