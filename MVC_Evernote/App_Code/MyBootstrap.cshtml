@helper LinkButton(string url = "", string color = "", string addtionalClass = "", string title = "", string icon = "", string text = "")
{
    <a href="@url" class="btn btn-@color @addtionalClass" title="@title"><span class="@icon"></span>@text</a>
}

@helper LinkButton(string id = "", string url = "", string color = "", string addtionalClass = "", string title = "", string icon = "", string text = "")
{
    <a href="@url" id="@id" name="@id" class="btn btn-@color @addtionalClass" title="@title"><span class="@icon">@text</span></a>
}



@helper Button(string id = "", string url = "", string color = "", string addtionalClass = "", string typ = "button", string icon = "", string text = "")
{
    <button type="@typ" id="@id" name="@id" class="btn btn-@color @addtionalClass"><span class="@icon"></span>@text</button>
}

